<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="webkul.opencart.mobikul.activity.SubCategoryV3Theme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/shop_for"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/heading_size_medium"
                android:textStyle="bold"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/subcategory_v3_recylcer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_elevetion_4"
                android:paddingBottom="@dimen/margin5x" />
        </LinearLayout>
    </RelativeLayout>
</layout>
