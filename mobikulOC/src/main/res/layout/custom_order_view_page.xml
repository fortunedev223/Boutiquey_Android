<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_elevetion_2"
                android:layout_marginTop="@dimen/card_elevetion_2"
                app:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_size_medium" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray_color1" />

                    <TextView
                        android:id="@+id/tv_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="@dimen/heading_size_small"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        tools:text="OrderID #343" />

                    <TextView
                        android:id="@+id/order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding"
                        android:paddingLeft="@dimen/padding"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/heading_size_small" />

                    <TextView
                        android:id="@+id/tv_order_shippingaddressheading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:text="@string/shipping_address"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_size_small" />


                    <TextView
                        android:id="@+id/tv_order_shippingaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding_6"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/heading_size_small" />


                    <TextView
                        android:id="@+id/tv_order_billingaddressheading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding"
                        android:textStyle="bold"
                        android:text="@string/billing_address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_size_small" />

                    <TextView
                        android:id="@+id/tv_order_billingaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding_6"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/heading_size_small" />

                    <TextView
                        android:id="@+id/shipping_method_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding"
                        android:text="@string/shipping_method"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_size_small" />

                    <TextView
                        android:id="@+id/shipping_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding_6"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/heading_size_small" />

                    <TextView
                        android:id="@+id/tv_order_paymentmethodheading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding"
                        android:textStyle="bold"
                        android:text="@string/payment_method_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_size_small" />

                    <TextView
                        android:id="@+id/tv_order_paymentmethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:paddingLeft="@dimen/padding"
                        android:paddingTop="@dimen/padding_6"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/heading_size_small" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/dboy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin5x"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/tv_order_status"
                style="@style/subHeadingTextStyle"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />

            <!--<TextView-->
            <!--style="@style/subHeadingTextStyle"-->
            <!--android:text="Order Information" />-->


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_elevetion_2"
                android:layout_marginTop="@dimen/card_elevetion_2"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:text="@string/product_info"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/heading_size_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray_color1" />

                    <LinearLayout
                        android:id="@+id/productLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical" />
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_elevetion_2"
                android:layout_marginTop="@dimen/card_elevetion_2"
                card_view:cardCornerRadius="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_heading"
                        android:text="@string/order_details"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_size_small" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_gray_color1" />

                    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/tableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:padding="@dimen/padding">

                    </TableLayout>


                    <TextView
                        android:id="@+id/tv_gift_certificate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="ORDER AGAIN"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/heading_size_medium"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/line_color"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_can_reorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="ORDER AGAIN"
                        android:textColor="@color/green_font_color"
                        android:textSize="@dimen/heading_size_medium"
                        android:visibility="gone" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</layout>
