<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent_gray" />
            <gradient android:angle="-90"  android:endColor="@color/colorAccent_gray"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent_gray" />

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent_gray" />
            <gradient android:angle="-90" android:startColor="@color/colorAccent_gray" android:endColor="@color/colorAccent_gray" />
        </shape>
    </item>
</selector>