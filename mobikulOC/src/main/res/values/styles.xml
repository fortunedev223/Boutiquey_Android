    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/dark_primary_color</item>
    </style>

    <style name="AppTheme1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="CustomAnimations" />

    <!-- Sliding animation -->
    <style name="CustomAnimations.slide">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>

    <!-- Grow animation -->
    <style name="CustomAnimations.grow">
        <item name="android:windowEnterAnimation">@anim/grow_in</item>
        <item name="android:windowExitAnimation">@anim/grow_out</item>
    </style>

    <style name="expanded_collapsable_toolbar_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headingTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subHeadingTextStyle" parent="headingTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/dark_primary_color</item>
    </style>

    <style name="smallTextStyle" parent="headingTextStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="CyanAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_cyan</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_cyan</item>
        <item name="colorAccent">@color/colorAccent_cyan</item>
        <item name="myLinkColor">@color/link_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/ButtonStyle_Cyan</item>
        <item name="buttonStyle">@style/ButtonStyle_Cyan</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">18dp</item>
        <item name="android:maxHeight">18dp</item>
    </style>


    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_blue</item>
        <item name="colorAccent">@color/colorAccent_blue</item>
        <item name="myLinkColor">@color/link_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/ButtonStyle_Blue</item>
        <item name="buttonStyle">@style/ButtonStyle_Blue</item>
    </style>

    <style name="GrayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_gray</item>
        <item name="colorAccent">@color/colorAccent_gray</item>
        <item name="myLinkColor">@color/link_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/ButtonStyle_Gray</item>
        <item name="buttonStyle">@style/ButtonStyle_Gray</item>
    </style>

    <style name="BrownTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_brown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_brown</item>
        <item name="colorAccent">@color/colorAccent_brown</item>
        <item name="myLinkColor">@color/link_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/ButtonStyle_Brown</item>
        <item name="buttonStyle">@style/ButtonStyle_Brown</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle_Cyan">
        <item name="android:gravity">center</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:background">@drawable/mybutton_cyan</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle_Blue">
        <item name="android:gravity">center</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:background">@drawable/mybutton_blue</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle_Gray">
        <item name="android:gravity">center</item>
        <!--<item name="android:padding">10dp</item>-->
        <item name="android:background">@drawable/mybutton_gray</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

