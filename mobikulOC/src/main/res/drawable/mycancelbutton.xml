<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"></corners>
            <!--android:radius="6dip"   android:radius="3dip"-->

            <stroke android:width="1dip" android:color="@android:color/darker_gray" />
            <gradient android:angle="-90" android:endColor="@color/light_gray" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"></corners>
            <stroke android:width="1dip" android:color="@android:color/darker_gray" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp"></corners>
            <stroke android:width="1dip" android:color="@android:color/darker_gray" />
            <gradient android:angle="-90" android:endColor="@android:color/white" android:startColor="@android:color/white" />
        </shape>
    </item>
</selector>