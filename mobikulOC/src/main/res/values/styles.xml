<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Appcompat theme  -->

    <style name="AppTheme1" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="myLinkColor">@color/accent_color</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--<item name="android:popupMenuStyle">@style/popupMenuStyle</item>-->
        <item name="popupMenuStyle">@color/dark_primary_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="Base.Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:buttonStyle">@style/ButtonStyle_Blue</item>
        <item name="android:button">@style/ButtonStyle_Blue</item>
    </style>

    <style name="CustomTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RadioBtnTheme" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

